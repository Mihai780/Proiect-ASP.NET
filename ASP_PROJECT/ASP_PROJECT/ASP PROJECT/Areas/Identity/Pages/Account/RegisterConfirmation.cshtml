@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p class="text-white">
 <a id="confirm-link" href="@Model.EmailConfirmationUrl">Apasa aici pentru a-ti confirma contul</a>
</p>
    }
    else
    {
<p class="text-white">
        Vezi mail-ul pe care l-ai introdus pentru a confirma contul tau!
</p>
    }
}

